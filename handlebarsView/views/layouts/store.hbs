<h1>Store</h1>
{{#if noProducts}}
    {{> noProduct}}
{{/if}}
{{#each products}}
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src={{this.image}} alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">{{this.price}}</p>
        </div>
    </div>
{{/each}}
<a href="/api/addProduct">Go to Add Product</a>