head 
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge')
  meta(name='viewport', content='width=device-width,initial-scale=1')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx', crossorigin='anonymous')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js', integrity='sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa', crossorigin='anonymous')
  title Webpage

form(action='/api/products', method='POST')
  .form-group
    label(for='titleOfProduct') Title of product
    input.form-control#titleOfProduct(name='title', type='text', aria-describedby='emailHelp', placeholder='Enter title of product')
  .form-group
    label(for='imageOfProduct') Enter image url
    input.form-control#imageOfProduct(name='image', type='text', aria-describedby='emailHelp', placeholder='Enter url')
  .form-group
    label(for='exampleInputPassword1') Price of product
    input.form-control#exampleInputPassword1(name='price', type='number', placeholder='$700')
  button.btn.btn-primary(type='submit') Submit
a(href='/api/products') Go to Store 